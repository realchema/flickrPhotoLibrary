<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WithdrawActivity"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Balance" />

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/textViewShowBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:gravity="center"
        android:textSize="40dp"
        android:text="O.O" />

    <EditText
        android:paddingTop="40dp"
        android:id="@+id/editTextEnterAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@id/textViewShowBalance"
        android:hint="Enter the amount" />

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/buttonWithdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEnterAmount"
        android:textAllCaps="false"
        android:text="Withdraw" />


</RelativeLayout>